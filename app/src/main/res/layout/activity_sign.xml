<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".data.Sign">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_text_pw"
            android:text="password"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_id"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="99dp"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_sign"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="ID"
            android:ems="10"
            android:id="@+id/edit_text_id"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="99dp"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_pw"/>

    <EditText
            android:layout_width="208dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/edit_text_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="203dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="99dp"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_id"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sign"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_pw"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="224dp"
            android:layout_marginStart="224dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="163dp"/>

    <TextView
            android:text="회원가입 버튼을 클릭하면 이용약관에 동의하며 이해하신것으로 간주합니다."
            android:layout_width="209dp"
            android:layout_height="62dp"
            android:id="@+id/text_sign"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="103dp"
            android:layout_marginStart="103dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="94dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
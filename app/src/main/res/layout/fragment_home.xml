<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="top"
              android:background="@drawable/milkyway">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Meditation"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Hi,have a good day"
                android:textColor="@android:color/white"
                android:textSize="24sp"/>

        <HorizontalScrollView
                android:id="@+id/HorizontalScrollView_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn_home_all"
                        android:background="@drawable/background_text_sub_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp"
                        />

                <Button
                        android:id="@+id/btn_home_heart"
                        android:background="@drawable/background_text_sub_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="♡"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        />

                <Button
                        android:background="@drawable/background_text_sub_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test1"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        />

                <Button
                        android:background="@drawable/background_text_sub_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test2"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        />

                <Button
                        android:background="@drawable/background_text_sub_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test3"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        />

                <Button
                        android:background="@drawable/background_text_sub_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test4"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        />


            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <GridView
            android:id="@+id/grid_home"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:background="#66000000"
            android:padding="10dp"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"/>
</LinearLayout>
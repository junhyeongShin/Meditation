<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".data.Login"
        android:orientation="vertical"
        android:gravity="center"
        >

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_text_pw"
            android:text="password"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_id"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="99dp"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_sign"/>

    <EditText
            android:hint="ID"
            android:textSize="24sp"
            android:layout_width="209dp"
            android:layout_height="49dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="436dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="111dp"
            android:layout_marginStart="111dp"
            android:layout_marginEnd="111dp"
            android:layout_marginRight="111dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edit_text_id"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_pw"/>

    <Button
            android:text="로그인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="122dp"
            app:layout_constraintHorizontal_bias="0.343"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_pw"/>

    <Button
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button17"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@+id/button16"
            android:layout_marginEnd="111dp"
            android:layout_marginRight="111dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="121dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_pw"/>


</androidx.constraintlayout.widget.ConstraintLayout>